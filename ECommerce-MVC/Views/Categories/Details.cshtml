@model Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Details of Category @Model.Name</h1>

<div class="col-md-8 offset-2">
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Name">Category Name</label>
        <input class="form-control" id="exampleInputEmail1" asp-for="Name" readonly>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="desc" asp-for="Description">Description</label>
        <textarea class="form-control" id="desc" asp-for="Description" readonly></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Update" asp-route-id="@Model.CategoryId" class="btn btn-primary">Update</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
    

</div>
