@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Delete Category @Model.Name</h1>

<div class="col-md-8 offset-2">
    <form asp-action="Delete">
        <input asp-for="CategoryId" hidden/>
        <div class="form-group">
            <label for="exampleInputEmail1" asp-for="Name">Category Name</label>
            <input class="form-control" id="exampleInputEmail1" asp-for="Name" readonly>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="desc" asp-for="Description">Description</label>
            <textarea class="form-control" id="desc" asp-for="Description" readonly></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button onclick="return confirm('Are You Sure? You Want To Delete This Category')" type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>

</div>
@section Validation {
    <partial name="_ValidationScriptsPartial"></partial>
}