@model Product
@{
    ViewData["Title"] = $"Details Of {Model.Name}";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card" style="text-align:center">
            <img src="~/Images/@Model.ImageUrl" alt="@Model.Name" style="width:100%; height:400px" />
            <h1>@Model.Name</h1>
            <p>@Model.Price.ToString("c")</p>
            <p>@Model.Description</p>
            <p style="color:@Model.Color">@Model.Color</p>
            <p>@Model.Category.Name</></p>
            <button style="background-color:black ; color:white;height:50px">
                <i class="fas fa-regular fa-shopping-basket"></i>

                Add To Cart</button>
        </div>
        <a asp-action="Index" style="background-color:antiquewhite ; color:black;height:50px;text-decoration:none;display:block;text-align:center;padding-top:10px" class="mt-2">Back To Products</a>
    </div>

</div>

