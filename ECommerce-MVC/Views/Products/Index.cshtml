@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3">

            <div class="card" style="text-align:center">
                <a asp-action="Update" asp-route-id="@product.Id" style="background-color:antiquewhite;color:black;text-decoration:none;"><i class="fas fa-regular fa-edit" style="color:forestgreen"></i> Edit </a>
                <a asp-action="Delete" asp-route-id="@product.Id" style="background-color:aliceblue ;color:black;text-decoration:none;"><i class="fas fa-regular fa-trash" style="color:red"></i> Delete </a>

                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">

                    <img src="Images/@product.ImageUrl" alt="@product.Name" style="width:100%; height:300px" />

                </a>
                <h1>@product.Name</h1>
                <p>@product.Price.ToString("c")</p>
                <p>@product.Description</p>
                <p style="color:@product.Color">@product.Color</p>
                <p>@product.Category.Name</p>
                <button style="background-color:black ; color:white;height:50px">
                    <i class="fas fa-regular fa-shopping-basket"></i>
                    Add To Cart</button>

            </div>


        </div>
    }

</div>

<partial name="_CreateButton"></partial>

