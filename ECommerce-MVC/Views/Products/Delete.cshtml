@model Product
@{
    ViewData["Title"] = $"Delete Product {Model.Name}";
    var CategoryList = new SelectList(ViewBag.Category, "Id", "Name");
}

<h1 class="text-center">Delete Product @Model.Name</h1>

<div style="text-align:center">
    <img style="width:200px;height:300px" src="~/Images/@Model.ImageUrl" />
</div>

<div class="col-md-8 offset-2">

    <form asp-action="Delete" enctype="multipart/form-data">

        <input type="hidden" asp-for="ImageUrl" />

        <div class="form-group">
            <label for="InputName" asp-for="Name">Product Name</label>
            <input class="form-control" id="InputName" asp-for="Name" readonly>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="InputDescription" asp-for="Description">Product Description</label>
            <input class="form-control" id="InputDescription" asp-for="Description" readonly>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="InputPrice" asp-for="Price">Product Price</label>
            <input class="form-control" id="InputPrice" asp-for="Price" readonly>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="InputColor" asp-for="Color">Product Color</label>
            <input class="form-control" id="InputColor" asp-for="Color" readonly>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure? You will delete this product.')">Delete</button>

            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </form>

</div>

@section Validation {
    <partial name="_ValidationScriptsPartial"></partial>
}

